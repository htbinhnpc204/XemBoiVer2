<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.result.ResultFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@color/primary_color_10">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn"
                    android:textColor="@color/primary_color"
                    android:textSize="22sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/rsNameMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vũ Tuấn Nam"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/rsConGiapMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Canh Ngọ"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/rsDoBMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5/6/1990"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/rsBanMenhMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lộ bàng Thổ(Đất giữa đường)"
                    android:textSize="20sp"/>
            </LinearLayout>

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Người ấy"
                    android:textColor="@color/primary_color"
                    android:textSize="22sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/rsNameFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nguyễn Thanh Tâm"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/rsConGiapFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhâm Thân"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/rsDoBFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/10/1992"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/rsBanMenhFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kiếm phong Kim(Gươm vàng)"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Về Ngũ Hành"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"/>
                <TextView
                    android:id="@+id/nguHanhBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngũ hành content"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Cung mệnh:"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"/>
                <TextView
                    android:id="@+id/cungMenhBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cung mệnh content"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Về Can Chi"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"/>
                <TextView
                    android:id="@+id/canChiBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Can chi content"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Con số tình yêu theo tên"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"/>
                <TextView
                    android:id="@+id/conSoBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Con số content"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. Về Họ và Tên"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"/>
                <TextView
                    android:id="@+id/hoTenBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Họ và tên content"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tongDiem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tổng điểm là"
                    android:textAlignment="center"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/ketLuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hai bạn khá hợp nhau, cố gắng vun đắp thêm nhé!."
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="18sp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>